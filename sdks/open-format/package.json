{
  "name": "@simpleweb/open-format",
  "version": "0.1.0",
  "repository": "git@github.com:simpleweb/open-format.git",
  "author": "Benjamin Reid <ben@simpleweb.co.uk>",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "ganache-server": "ganache --wallet.accounts=0xc27786e23ac741aceef158731965a6285f350e114952201baad6149c18d735e7,1000000000000000000000",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "ethers": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/open-format.esm.js",
  "size-limit": [
    {
      "path": "dist/open-format.cjs.production.min.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/open-format.esm.js",
      "limit": "100 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "ethers": "^5",
    "ganache": "^7.2.0",
    "husky": "^8.0.1",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "graphql": "^16.5.0",
    "graphql-request": "^4.3.0"
  }
}
